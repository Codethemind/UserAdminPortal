<%- include('./partial/header')-%>
  <section class="h-100 gradient-form" style="background-color: #35b167;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
          <div class="card rounded-3 text-black">
            <div class="row g-0">
              <div class="col-lg-6">
                <div class="card-body mx-md-4">
                  <div class="text-center">
                    <img src="https://imgs.search.brave.com/NDAk93YcS_vovACT97ADj2Sd74lXIh-yZ604oxsIn3I/rs:fit:860:0:0:0/g:ce/aHR0cHM6Ly9zdGF0/aWMudmVjdGVlenku/Y29tL3N5c3RlbS9y/ZXNvdXJjZXMvdGh1/bWJuYWlscy8wMzUv/Nzc0LzUzMC9zbWFs/bC9tZW1iZXItbG9n/aW4tZm9ybS1vbi1s/YXB0b3Atc2NyZWVu/LXBuZy5wbmc"
                      style="width: 110px;" alt="logo">
                    <h5 class="mt-1 mb-3 pb-1">CodeTheMind</h5>
                  </div>
                  <form action="/user/signup" method="post" id="signupid">
                    <h6>Sign up now</h6>
                    <div class="form-outline mb-4">
                      <input type="text" name="name" id="nameid" class="form-control" placeholder="Name" required />
                    </div>
                    <div class="form-outline mb-4">
                      <input type="email" name="email" id="emailid" class="form-control" placeholder="Email address" required />
                      <p class="text-danger"><%= locals.existemail?existemail:null %></p>
                    </div>
                    <div class="form-outline mb-4">
                      <input type="name" name="username" id="usernameid" class="form-control" placeholder="Username" required />
                      <p class="text-danger"><%= locals.existuser?existuser:null %></p>

                    </div>
                    <div class="form-outline mb-4">
                      <input type="password" name="password" id="passwordid" class="form-control" placeholder="Password" required />
                    </div>
                    <div id="error" style="color: red;"></div>
                    <div class="text-center pt-1 pb-1">
                      <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">Sign up</button>
                    </div>
                    <div class="d-flex align-items-center justify-content-center pb-4">
                      <p class="mb-0 me-2">Already have an account?</p>
                      <a href="/" class="btn btn-outline-danger">LOG IN</a>
                    </div>
                  </form>
                </div>
              </div>
              <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                  <h4 class="mb-4">We are more than just a company</h4>
                  <p class="small mb-0">We believe in continuous effort and hard work as the foundation for growth and improvement. Our philosophy is that success doesn't come from sitting idle but from persistent effort and dedication. With hard work, even the most challenging tasks become manageable, and we strive to better ourselves and our work every day.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    document.getElementById('signupid').addEventListener('submit', (event) => {
        var name = document.getElementById('nameid').value.trim();
        var email = document.getElementById('emailid').value.trim();
        var username = document.getElementById('usernameid').value.trim();
        var password = document.getElementById('passwordid').value.trim();

        // Validate fields are not empty
        if (name === '' || email === '' || username === '' || password === '') {
            event.preventDefault();
            document.getElementById('error').textContent = "Fields cannot be empty or contain only spaces.";
        } 
        // Validate email format
      
else if (!/^\S+@\S+\.\S+$/.test(email)) {
    event.preventDefault();
    document.getElementById('error').textContent = "Please enter a valid email address.";
}
        // Validate password length
        else if (password.length < 6) {
            event.preventDefault();
            document.getElementById('error').textContent = "Password must be at least 6 characters long.";
        }
    });
</script>
