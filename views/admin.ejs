<%- include('./partial/header')-%>
    <!-- Sign Out Button -->
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="#">Admin Dashboard</a>
        <form  action="/admin/logout" class="form-inline">
            <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Sign Out</button>
        </form>
    </nav>


    <!-- Add New User and Search Buttons -->
    <div class="container mt-4">
        <div class="d-flex justify-content-between mb-5">
            
           <!-- Search Form -->
<form class="form-inline" method="get" action="/admin/admin">
    <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
</form>
        </div>
        <a   href="/admin/newuser" class="btn btn-success">Add New User</a>
    </div>

    <!-- Table -->
    <div class="container mt-5">
        <h2>Manage Records</h2>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>SI</th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>username</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if(typeof users!='undfined'&& users.length>0){ %>
                <% users.forEach((element,index) => { %>
                    <tr>
                    <td><%=index+1 %> </td>
                    <td><%=element._id %> </td>
                    <td><%=element.name %></td>
                    <td><%=element.email %></td>
                    <td><%=element.username %></td>
                    <td>
                        <a href="/admin/edituser/<%= element._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/admin/deleteuser/<%= element._id %>" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                    
                </tr>
                <%  }); %>

                <% }else{ %>
                    <tr>
                        <td colspan="6"  class="text-center">No user available</td>
                    </tr>
                <% } %>
                
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <%- include('./partial/footer')-%>

 
